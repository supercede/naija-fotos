{
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "consistent-return": 0,
    "max-classes-per-file": 0,
    "no-param-reassign": 0,
    "no-unused-expressions": 0,
    "no-unused-vars": 0,
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "linebreak-style": 0,
    "arrow-parens": ["error", "as-needed"],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  }
}
